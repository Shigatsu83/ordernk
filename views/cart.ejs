<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Your Cart</h1>
        <% if (Object.keys(cart).length === 0) { %>
            <p>Your cart is empty.</p>
        <% } else { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let productId in cart) { %>
                        <tr>
                            <td><%= cart[productId].name %></td>
                            <td>
                                <form action="/cart/update/<%= productId %>" method="POST">
                                    <input type="number" name="quantity" value="<%= cart[productId].quantity %>" min="1">
                                    <button type="submit" class="btn btn-info">Update</button>
                                </form>
                            </td>
                            <td><%= cart[productId].price * cart[productId].quantity %></td>
                            <td>
                                <form action="/cart/remove/<%= productId %>" method="POST">
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <h3>Total: <%= total %></h3>
        <% } %>
        <a href="/" class="btn btn-primary">Continue Shopping</a>
    </div>
</body>
</html>
